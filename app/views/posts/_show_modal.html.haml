.modal-header
  %h5.modal-title{id: "postShowModalTitle"}
    = post.title
  %button.close{id: "postShowModalClose", "data-dismiss": "modal"} &times;
.modal-body
  %p
    = post.user.name
  %p
    = post.visit_date
  - post.images.each do |image|
    %div
      = image_tag image.image_url, class:""
  %p
    = post.body
  .modal-footer
    = link_to post_path(post), method: :delete, remote: true, class:"" do
      .btn.btn-danger 削除
    .btn.btn-warning 編集
    -# = f.submit "投稿する", { id: 'newPostFormSubmit', class: "btn btn-warning", data: {disable_with: false}}