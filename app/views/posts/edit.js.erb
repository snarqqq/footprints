(function() {
  $('#postShowModalClose').trigger('click');
  $('#postEditBtn').trigger('click');
  $('#newPostModalContent').empty();
  <% if @post.already_visited == true%>
    $('#newPostModalContent').append("<%= j(render partial: 'posts/form', locals: {post: @post}) %>");
    let placeName = clickPlace.name !== undefined ? clickPlace.name : clickPlace.place_name;
    $('#newPostModalTitle').text(placeName);
    let url = "/posts/<%= @post.id %>";
    let method =  'patch'
    initDropzone(url, method);
  <% else %>
    $('#newPostModalContent').append("<%= j(render partial: 'posts/wannago_form', locals: {post: @post}) %>");
    let placeName = clickPlace.name !== undefined ? clickPlace.name : clickPlace.place_name;
    $('#wannagoNewModalTitle').text(placeName);
  <% end %>
}());
