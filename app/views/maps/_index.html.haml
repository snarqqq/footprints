= form_with url: map_request_path, method: :post, class: "search_form row" do |f|
  = f.text_field :address, placeholder: "Type place", class: "search_box col-11", id: "address-input"
  = f.button 'Search', {id: 'search-submit'}
.row.mt-2
  %button.set-my-view.btn-success.rounded my view
  %button.save-this-view.btn-success.rounded save this view
#map

:css
  #map{
    height: 480px;
    width: 900px;
  }

